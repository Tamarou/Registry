<!DOCTYPE html>
<html lang="en">
<head>
    <title><%= title || 'Registry Workflow' %></title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/registry.css">

    <style>
        body {
            background-color: var(--color-bg-secondary);
            padding: var(--space-4);
        }

        .workflow-container {
            max-width: var(--container-max-width);
            margin: 0 auto;
            background: var(--color-bg-primary);
            border-radius: var(--radius-xl);
            box-shadow: var(--shadow-lg);
            overflow: hidden;
        }

        .workflow-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: var(--color-white);
            padding: var(--space-8);
            text-align: center;
        }

        .workflow-header h1 {
            margin: 0;
            color: var(--color-white);
        }

        .workflow-progress {
            background: var(--color-bg-secondary);
            padding: var(--space-4) var(--space-8);
            border-bottom: 1px solid var(--color-border);
        }

        .workflow-content {
            padding: var(--space-8);
        }

        .workflow-navigation {
            padding: var(--space-6) var(--space-8);
            border-top: 1px solid var(--color-border);
            background: var(--color-bg-secondary);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        form {
            margin: var(--space-4) 0;
        }
    </style>

    <%= content 'head' %>
</head>
<body>
    <div class="workflow-container" 
         data-current-step="<%= stash('current_step') || 1 %>"
         data-total-steps="<%= stash('total_steps') || 1 %>"
         data-step-names="<%= stash('step_names') || '[]' %>"
         data-step-urls="<%= stash('step_urls') || '[]' %>"
         data-completed-steps="<%= stash('completed_steps') || '[]' %>">
        <header class="workflow-header">
            <h1><%= title || 'Registry Workflow' %></h1>
            % if (my $description = stash 'description') {
                <p><%= $description %></p>
            % }
        </header>
        
        % if (my $progress = content 'progress') {
            <div class="workflow-progress">
                <%= $progress %>
            </div>
        % }
        
        % if (stash('show_workflow_progress')) {
            <workflow-progress 
                data-current-step="<%= stash('current_step') || 1 %>"
                data-total-steps="<%= stash('total_steps') || 1 %>"
                data-step-names="<%= stash('step_names') || '[]' %>"
                data-step-urls="<%= stash('step_urls') || '[]' %>"
                data-completed-steps="<%= stash('completed_steps') || '[]' %>">
            </workflow-progress>
        % }
        
        <main class="workflow-content">
            <%= content %>
        </main>
        
        % if (my $navigation = content 'navigation') {
            <div class="workflow-navigation">
                <%= $navigation %>
            </div>
        % }
    </div>

    <script src="https://unpkg.com/htmx.org@1.9.10"></script>
    <script src="/static/js/workflow-progress.js"></script>
    <%= content 'javascript' %>
</body>
</html>